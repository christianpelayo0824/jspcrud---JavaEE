<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">

	<display-name>Project01</display-name>

	<!-- Controller should be the welcome file so that it will fetch the data -->
	<!-- correctly -->
	<welcome-file-list>
		<welcome-file>UserController</welcome-file>
	</welcome-file-list>

	<!-- Configuration -->
	<servlet>
		<servlet-name>UserController</servlet-name>
		<servlet-class>com.library.Controller.UserController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserController</servlet-name>
		<url-pattern>/UserController</url-pattern>
	</servlet-mapping>
</web-app>